<h2>Your Cart</h2>
<% if (cart.length > 0) { %>
<ul>
  <% cart.forEach(item => { %>
  <li>
    <%= item.name %> - $<%= item.price %>
    <form
      action="/cart/remove/<%= item.id %>"
      method="POST"
      style="display: inline"
    >
      <button type="submit">Remove</button>
    </form>
  </li>
  <% }) %>
</ul>
<p>Total: $<%= total %></p>
<button>Checkout</button>
<% } else { %>
<p>Your cart is empty.</p>
<% } %>
