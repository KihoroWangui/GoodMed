<h4>Your Cart</h4>
<% if (cart.length > 0) { %>
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% cart.forEach(item => { %>
    <tr>
      <td><%= item.name %></td>
      <td>Ksh<%= item.price %></td>
      <td>
        <form
          action="/cart/remove/<%= item.id %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Remove</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<h4><strong>Total:</strong> Ksh<%= total %></h4>
<button>Checkout</button>
<% } else { %>
<p>Your cart is empty.</p>
<% } %>
